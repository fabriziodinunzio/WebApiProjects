@section scripts {
    @Scripts.Render("~/bundles/app")
}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>BookService</h1>
        </div>
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="panel-title">
                        <h2>Books</h2>
                    </div>
                </div>
                <div class="panel-body">
                    <ul class="list-group" data-bind="foreach: books">
                        <li class="list-group-item">
                            <strong><span data-bind="text: AuthorName"></span></strong><i>: <span data-bind="text: Title" /></i>
                            <a href="#" data-bind="click: $parent.getDetail">Details</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <!--ko if:detail()-->
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="panel-title">
                        <h3>Detail</h3>
                    </div>
                </div>
                <div class="panel-body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Author</th>
                                <th>Title</th>
                                <th>Year</th>
                                <th>Genre</th>
                                <th>Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td data-bind="text: detail().AuthorName"></td>
                                <td data-bind="text: detail().Title"></td>
                                <td data-bind="text: detail().Year"></td>
                                <td data-bind="text: detail().Genre"></td>
                                <td data-bind="text: detail().Price"></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!--/ko-->
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="panel-title">
                        <h2>Nuovo libro</h2>
                    </div>
                </div>
                <div class="panel-body">
                    <form role="form">
                        <div class="form-group">
                            <label for="author">Author</label>
                            <select data-bind="options: authors, optionsText: 'Name', value: newBook.Author" class="form-control" />
                            <label for="title">Title</label>
                            <input type="text" data-bind="text: Title" class="form-control" id="title" />
                            <label for="year">Year</label>
                            <input type="text" data-bind="text: Year" class="form-control" id="year" />
                            <label for="genre">Genre</label>
                            <input type="text" data-bind="text: Year" class="form-control" id="genre" />
                            <label for="price">Price</label>
                            <input type="text" data-bind="text: Year" class="form-control" id="price" />
                        </div>
                    </form>
                </div>
            </div> 
        </div>
    </div>
</div>
